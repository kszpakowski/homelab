apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: node-labeler
  namespace: argocd
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  destination:
    namespace: node-labeler
    server: 'https://kubernetes.default.svc'
  source:
    path: node-labeler
    repoURL: 'https://github.com/kszpakowski/homelab.git'
    targetRevision: HEAD
  sources: []
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
